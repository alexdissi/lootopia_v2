generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String               @id @default(cuid())
  name               String?
  email              String               @unique
  emailVerified      Boolean
  image              String?
  createdAt          DateTime
  updatedAt          DateTime
  stripeCustomerId   String?
  nickname           String?
  role               UserRole             @default(PLAYER)
  twoFactorEnabled   Boolean              @default(false)
  collectedArtefacts Artefact[]           @relation("CollectedByUser")
  Craft              Craft[]
  LeaderboardEntry   LeaderboardEntry[]
  participations     Participation[]
  Review             Review[]
  transactionHistory TransactionHistory[]
  createdChasses     TreasureHunt[]       @relation("CreatedByUser")
  items              UserItem[]
  virtualCurrency    VirtualCurrency[]
  accounts           Account[]
  sessions           Session[]
  twoFactor          TwoFactor[]
  StepDiscovery      StepDiscovery[]

  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime
  updatedAt DateTime
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("account")
}

model Verification {
  id         String    @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("verification")
}

model TreasureHunt {
  id               String             @id @default(cuid())
  title            String
  description      String?
  createdById      String
  startDate        DateTime?
  endDate          DateTime?
  location         String?
  status           HuntStatus         @default(PENDING)
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  fee              Int?
  isFinished       Boolean            @default(false)
  mapStyle         String?
  mode             HuntMode           @default(PUBLIC)
  artefacts        Artefact[]
  steps            HuntStep[]
  LeaderboardEntry LeaderboardEntry[]
  participants     Participation[]
  Review           Review[]
  rewards          Reward[]
  createdBy        User               @relation("CreatedByUser", fields: [createdById], references: [id], onDelete: Cascade)
}

model Participation {
  id           String              @id @default(cuid())
  userId       String
  huntId       String
  status       ParticipationStatus @default(ONGOING)
  joinDate     DateTime            @default(now())
  treasureHunt TreasureHunt        @relation(fields: [huntId], references: [id])
  user         User                @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Artefact {
  id            String          @id @default(cuid())
  name          String
  rarity        ArtefactRarity
  description   String?
  imageUrl      String?
  userId        String
  huntId        String?
  foundAt       DateTime        @default(now())
  isHidden      Boolean         @default(false)
  source        ArtefactSource
  hunt          TreasureHunt?   @relation(fields: [huntId], references: [id])
  user          User            @relation("CollectedByUser", fields: [userId], references: [id], onDelete: Cascade)
  Craft         Craft[]
  CraftMaterial CraftMaterial[]
}

model HuntStep {
  id           String          @id @default(cuid())
  title        String?
  description  String
  hint         String?
  imageUrl     String?
  huntId       String
  stepOrder    Int
  latitude     Float?
  longitude    Float?
  radius       Int             @default(1000) // en m√®tres
  isCompleted  Boolean         @default(false)
  createdAt    DateTime        @default(now())
  treasureHunt TreasureHunt    @relation(fields: [huntId], references: [id])
  discoveries  StepDiscovery[]
}

model StepDiscovery {
  id           String   @id @default(cuid())
  userId       String
  stepId       String
  discoveredAt DateTime @default(now())
  latitude     Float
  longitude    Float
  distance     Int
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  step         HuntStep @relation(fields: [stepId], references: [id], onDelete: Cascade)

  @@unique([userId, stepId])
}

model Reward {
  id           String       @id @default(cuid())
  type         RewardType
  value        Int
  description  String?
  huntId       String
  treasureHunt TreasureHunt @relation(fields: [huntId], references: [id])
}

model VirtualCurrency {
  id                 String               @id @default(cuid())
  userId             String
  amount             Int
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt
  type               CurrencySourceType   @default(EARNED)
  transactionHistory TransactionHistory[]
  user               User                 @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model TransactionHistory {
  id                String          @id @default(cuid())
  userId            String
  transactionId     String          @default(cuid())
  amount            Int
  transactionType   TransactionType @default(EARNED)
  description       String?
  createdAt         DateTime        @default(now())
  virtualCurrencyId String
  stripeSessionId   String?         @unique
  user              User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  virtualCurrency   VirtualCurrency @relation(fields: [virtualCurrencyId], references: [id], onDelete: Cascade)
}

model Craft {
  id        String          @id @default(cuid())
  userId    String
  resultId  String
  createdAt DateTime        @default(now())
  result    Artefact        @relation(fields: [resultId], references: [id])
  user      User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  materials CraftMaterial[]
}

model CraftMaterial {
  id         String   @id @default(cuid())
  craftId    String
  artefactId String
  artefact   Artefact @relation(fields: [artefactId], references: [id])
  craft      Craft    @relation(fields: [craftId], references: [id])
}

model LeaderboardEntry {
  id          String       @id @default(cuid())
  userId      String
  huntId      String
  rank        Int
  score       Int
  completedAt DateTime
  hunt        TreasureHunt @relation(fields: [huntId], references: [id])
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ShopItem {
  id          String       @id @default(cuid())
  name        String
  description String
  price       Int
  imageUrl    String?
  type        ShopItemType
  isActive    Boolean      @default(true)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  purchases   UserItem[]
}

model UserItem {
  id        String    @id @default(cuid())
  userId    String
  itemId    String
  quantity  Int       @default(1)
  isActive  Boolean   @default(true)
  expiresAt DateTime?
  createdAt DateTime  @default(now())
  item      ShopItem  @relation(fields: [itemId], references: [id])
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model TwoFactor {
  id          String @id @default(cuid())
  secret      String
  backupCodes String
  userId      String
  user        User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("twoFactor")
}

model Review {
  id           String       @id @default(uuid())
  userId       String
  huntId       String
  comment      String
  score        Int
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  TreasureHunt TreasureHunt @relation(fields: [huntId], references: [id])
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum UserRole {
  PLAYER
  ORGANIZER
  ADMIN
}

enum HuntMode {
  PUBLIC
  PRIVATE
}

enum HuntStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum ParticipationStatus {
  ONGOING
  COMPLETED
  ABANDONED
}

enum ArtefactSource {
  CACHE
  SHOP
  CRAFT
  EVENT
}

enum ArtefactRarity {
  COMMON
  RARE
  EPIC
  LEGENDARY
}

enum RewardType {
  VIRTUAL_CURRENCY
  ARTEFACT
  DISCOUNT
  PHYSICAL_ITEM
}

enum CurrencySourceType {
  EARNED
  PURCHASED
  GIFTED
}

enum TransactionType {
  EARNED
  SPENT
  BOUGHT
}

enum ShopItemType {
  BOOST
  COSMETIC
  HINT
  SPECIAL_ACCESS
}
